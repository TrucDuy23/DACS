@model DACS.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Khóa học tập trực tuyến - Đăng nhập</title>

    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Webestica.com">
    <meta name="description" content="Eduport- LMS, Education and Course Theme">

    <!-- Favicon -->
    <link rel="shortcut icon" href="/assets/client/images/favicon.ico">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com/">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;700&amp;family=Roboto:wght@400;500;700&amp;display=swap">

    <!-- Plugins CSS -->
    <link rel="stylesheet" type="text/css" href="/assets/client/vendor/font-awesome/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/client/vendor/bootstrap-icons/bootstrap-icons.css">

    <!-- Theme CSS -->
    <link id="style-switch" rel="stylesheet" type="text/css" href="/assets/client/css/style.css">

    <style>
        /* Custom CSS for login page */
        body, html {
            height: 100%;
            font-family: 'Roboto', sans-serif; /* Thay đổi font-family nếu cần */
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa; /* Change background color if necessary */
        }

        main {
            width: 100%;
            max-width: 600px; /* Adjust maximum width as needed */
        }

        .login-form {
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
    </style>

</head>

<body>

    <!-- **************** MAIN CONTENT START **************** -->
    <main>
        <section class="p-0 d-flex align-items-center position-relative overflow-hidden">

            <div class="container">
                <div class="row">
                    <!-- Right -->
                    <div class="col-12">
                        <div class="row my-5 justify-content-center">
                            <div class="col-sm-10 col-xl-8">
                                <!-- Title -->
                                <span class="mb-0 fs-1">👋</span>
                                <h1 class="fs-2 text-center">Khóa học tập trực tuyến</h1>
                                <p class="lead mb-4 text-center">Chào mừng bạn! Vui lòng đăng nhập tài khoản của bạn để vào hệ thống.</p>

                                <!-- Form START -->
                                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                                {
                                    <!-- Email -->
                                    <div class="mb-4">
                                        <label for="exampleInputEmail1" class="form-label">Tài khoản *</label>
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-person-fill"></i></span>
                                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "UserName", @autofocus = "autofocus" })
                                        </div>
                                    </div>
                                    <!-- Password -->
                                    <div class="mb-4">
                                        <label for="inputPassword5" class="form-label">Mật khẩu *</label>
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                                        </div>
                                    </div>
                                    <!-- Check box -->
                                    <div class="mb-4 d-flex justify-content-between">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                            <label class="form-check-label" for="exampleCheck1">Ghi nhớ</label>
                                        </div>
                                        <div class="text-primary-hover">
                                            <a href="forgot-password.html" class="text-secondary">
                                                <u>Quên mật khẩu?</u>
                                            </a>
                                        </div>
                                    </div>
                                    <!-- Button -->
                                    <div class="align-items-center mt-0">
                                        <div class="d-grid">
                                            <button class="btn btn-primary mb-0" type="submit">Đăng nhập</button>
                                        </div>
                                    </div>
                                }
                                <!-- Sign up link -->
                                <div class="mt-4 text-center">
                                    <span>Bạn chưa có tài khoản? <a href="@Url.Action("Register", "User")">Đăng ký tài khoản tại đây</a></span>
                                </div>

                            </div>
                        </div> <!-- Row END -->
                    </div>
                </div> <!-- Row END -->
            </div>
        </section>
    </main>
    <!-- **************** MAIN CONTENT END **************** -->
    <div class="back-top"><i class="bi bi-arrow-up-short position-absolute top-50 start-50 translate-middle"></i></div>


    <script src="/assets/client/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/client/js/functions.js"></script>
</body>
</html>
